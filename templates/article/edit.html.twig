{% extends 'base.html.twig' %}

{% block title %}{{ 'article.edit.title'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <h1>{{ 'article.edit.title'|trans }}</h1>

                {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button type="submit" class="btn btn-primary">{{ 'article.edit.update'|trans }}</button>
                    <a href="{{ path('app_article_show', {id: article.id}) }}" class="btn btn-secondary">{{ 'article.back_to_article'|trans }}</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %} 