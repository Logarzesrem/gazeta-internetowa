{% extends 'base.html.twig' %}

{% block title %}{{ 'user.register'|trans }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center mb-0">{{ 'user.create_account'|trans }}</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.username) }}
                            {{ form_widget(form.username) }}
                            {{ form_errors(form.username) }}
                            {{ form_help(form.username) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.plainPassword.first) }}
                            {{ form_widget(form.plainPassword.first) }}
                            {{ form_errors(form.plainPassword.first) }}
                            {{ form_help(form.plainPassword.first) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.plainPassword.second) }}
                            {{ form_widget(form.plainPassword.second) }}
                            {{ form_errors(form.plainPassword.second) }}
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">{{ 'user.register'|trans }}</button>
                        </div>
                    {{ form_end(form) }}

                    <div class="text-center mt-3">
                        <p class="mb-0">{{ 'user.already_have_account'|trans }} <a href="{{ path('app_user_login') }}">{{ 'user.login_here'|trans }}</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 