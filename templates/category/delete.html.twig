{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.category_delete'|trans({'%id%': category.id|default('')}) }}
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ 'title.category_delete'|trans({'%id%': category.id|default('')}) }}</h1>
        
        {% if articleCount > 0 %}
            <div class="alert alert-warning">
                <strong>{{ 'category.delete.warning'|trans }}</strong><br>
                {{ 'category.delete.has_articles'|trans({'%count%': articleCount}) }}
            </div>
        {% endif %}
        
        <form method="post" action="{{ path('app_category_delete', {'slug': category.slug, '_locale': app.request.locale}) }}">
            <div class="form-group row float-sm-right">
                <input type="submit" value="{{ 'action.delete'|trans }}" class="btn btn-danger" onclick="return confirm('{{ 'category.delete_confirm'|trans({}, 'admin') }}')" />
            </div>
            <div class="form-group row float-sm-left">
                <a href="{{ url('app_category_index') }}" class="btn btn-link">
                    {{ 'action.back_to_list'|trans }}
                </a>
            </div>
        </form>
    </div>
{% endblock %} 