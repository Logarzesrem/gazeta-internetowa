# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts - always use LF
*.sh text eol=lf

# PHP files - always use LF
*.php text eol=lf

# Configuration files - always use LF
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Docker files
Dockerfile text eol=lf
docker-compose*.yml text eol=lf

# Composer files
composer.json text eol=lf
composer.lock text eol=lf

# Environment files
.env* text eol=lf

# Binary files - don't modify
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
